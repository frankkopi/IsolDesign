@section ShowPortfolioFields {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#firstCaseButton").click(function () {
                $("#firstPortfolioSubject").toggleClass('show');
                $("#secondCaseButton").toggleClass('show');
            });

            $("#secondCaseButton").click(function () {
                $("#secondPortfolioSubject").toggleClass('show');
            });
        });
    </script>
}

@section Scripts {
