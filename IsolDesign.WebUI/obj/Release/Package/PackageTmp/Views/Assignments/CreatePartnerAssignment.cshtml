@model IsolDesign.WebUI.Models.CreatePartnerAssignmentViewModel

@{
    ViewBag.Title = "Create Partner Assignment";
}

<h2>Create Partner Assignment</h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data", @id = "myForm" }))
{
    @Html.AntiForgeryToken()
    
    @Html.Hidden("Type")
    @Html.Hidden("PartnerId")

    <div class="form-horizontal">
        <h4>Assignment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.partnerAssignmentModel.WorkTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.partnerAssignmentModel.WorkTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.partnerAssignmentModel.WorkTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.partnerAssignmentModel.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.partnerAssignmentModel.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.partnerAssignmentModel.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Upload Photo of Assignment -->
        <div class="form-group">
            <label class="control-label col-md-2">Assignment Image</label>
            <!-- The name="image" attribute must match the parameter name in the post action-method for model binding to work -->
            <div class="col-md-10">
                <input type="file" data-val="true" data-val-required="Image field is required (Maximum file size 1 MB)" name="photo" class="form-control" />
                @Html.ValidationMessage("photo", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Upload Drawing of Assignment -->
        <div class="form-group">
            <label class="control-label col-md-2">Drawing or Blueprint</label>
            <!-- The name="image" attribute must match the parameter name in the post action-method for model binding to work -->
            <div class="col-md-10">
                <input type="file" data-val="true" data-val-required="Image field is required (Maximum file size 1 MB)" name="drawing" class="form-control" />
                @Html.ValidationMessage("drawing", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Upload Video of Assignment -->
        <div class="form-group">
            <label class="control-label col-md-2">Video</label>
            <!-- The name="image" attribute must match the parameter name in the post action-method for model binding to work -->
            <div class="col-md-10">
                <input type="file" data-val="true" data-val-required="Image field is required (Maximum file size 1 MB)" name="video" class="form-control" />
                @Html.ValidationMessage("video", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Credits</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.partnerAssignmentModel.Credits, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.partnerAssignmentModel.Credits, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
