@model IsolDesign.WebUI.Models.DetailsAssignmentViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Assignment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AssignmentModel.WorkTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AssignmentModel.WorkTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AssignmentModel.Type)
        </dt>

        <dd>
            @{
                var temp = Model.AssignmentModel.Type;
                var name = Model.AssignmentModel.DisplayName(temp);
            }
            @name
        </dd>

        <dt class="addMarginTop">
            @Html.DisplayNameFor(model => model.AssignmentModel.Description)
        </dt>

        <dd class="addMarginTop">
            @Html.TextAreaFor(model => model.AssignmentModel.Description, new { @class = "showTextArea", @readonly = "readonly"})
        </dd>

        <dt class="addMarginTop">
            @Html.DisplayNameFor(model => model.AssignmentModel.Photo)
        </dt>

        <dd class="addMarginTop">
            <img src="../../../@Model.AssignmentModel.Photo" class="thumbnail applicantsImage" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AssignmentModel.Drawing)
        </dt>

        <dd>
            <img src="../../../@Model.AssignmentModel.Drawing" class="thumbnail applicantsImage" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AssignmentModel.Video)
        </dt>

        <dd>
            <img src="../../../@Model.AssignmentModel.Video" class="thumbnail applicantsImage" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
